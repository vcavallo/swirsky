@import 'variables';


body {
  font-family: $swirsky-body-font;
  color: $black;
  a {
    color: $main-contrast;
    &:hover {
      color: $contrast-dark;
      background-color: $main-color;
    }
  }
  h1, h2, h3 {
    font-family: $swirsky-header-font;
    color: $main-contrast;
  }
  h1 {
    font-weight: 800;
    letter-spacing: 1.8px;
  }
  h2, h3 {
    font-weight: normal;
  }
  .main-copy {
    h2 {
      border-bottom: 1px dotted $contrast-dark;
    }
  }
}

.navigation {
  border-bottom: 4px solid $main-dark;
}

footer {
  background-color: $main-color;
  a {
    font-weight: 500;
    color: white;
    &:hover {
      color: white;
      background-color: $main-dark;
    }
  }
  margin-top: 10px;
  border-top: 4px solid $main-dark;
  ul {
    list-style: none;
    margin-left: 0;
  }
}

header {
  &.panel {
    background-image: url(<%= image_path "walking.jpg" %>);
    background-size: cover;
    background-repeat: no-repeat;
    h1, h2 {
      color: white;
    }
  }
  height: 400px;
  h1 {
    font-size: 4em;
  }
  &.smaller {
    height: auto;
    margin-bottom: 0;
  }
}

.aside {
  background-color: $contrast-dark;
  h1, h2, h3, p {
    color: white;
  }
  h1, h2, h3 {
    border-bottom: 1px dotted white;
  }
}

.contain-to-grid.callout {
  background-color: $main-contrast;
  padding: 10px 0;
  h1 {
    color: white;
  }
}
